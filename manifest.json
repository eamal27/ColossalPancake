{
  "manifest_version": 2,

  "name": "MassiveWaffle",
  "description": "Shows Sentiment Analysis color of a post based on comments",
  "version": "1.0",

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],

  "content_scripts": [
    {
      "matches": ["https://www.reddit.com/*", "http://www.reddit.com/*"],
      "css": [],
      "js": ["main.js", "lib/jquery.js", "lib/d3-scale-chromatic.v1.min.js", "lib/d3.v4.min.js"],
      "run-at": "document_end"
    }
  ]
}
