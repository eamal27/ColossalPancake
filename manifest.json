{
  "manifest_version": 2,

  "name": "MassiveWaffle",
  "description": "Shows Sentiment Analysis color of a post based on comments",
  "version": "1.0",

  "permissions": [
    "activeTab",
		"https://massive-waffle.herokuapp.com/hn/",
		"https://massive-waffle.herokuapp.com/reddit/",
		"https://massive-waffle.herokuapp.com/score_comment"
  ],

  "content_scripts": [
    {
      "matches": ["https://www.reddit.com/*", "http://www.reddit.com/*"],
      "js": ["lib/jquery.js", "reddit-highlight.js", "lib/d3.v4.min.js", "lib/d3-scale-chromatic.v1.min.js"],
      "run-at": "document_end"
    },
    {
      "matches": ["https://news.ycombinator.com/*"],
      "js": ["hn-highlight.js", "lib/d3.v4.min.js", "lib/d3-scale-chromatic.v1.min.js"],
      "run-at": "document_end"
    },
    {
      "matches": ["https://www.amazon.ca/*", "https://www.amazon.com/*"],
      "js": ["lib/jquery.js", "amazon-highlight.js", "lib/d3.v4.min.js", "lib/d3-scale-chromatic.v1.min.js"],
      "run-at": "document_end"
    }
  ]
}
